@{
    ViewData["Title"] = "Place order";
}

<section class="section-shell">
    <div class="card border-0 shadow-sm p-4 text-center">
        <h2 class="fw-semibold">Ready to confirm?</h2>
        <p class="text-muted">Your items are staged. Use the button below to finalize the purchase.</p>
        <form asp-action="PlaceOrder" method="post" class="mt-3 d-inline-flex gap-3 justify-content-center">
            <button class="btn btn-dark btn-lg" type="submit">Confirm order</button>
            <a class="btn btn-outline-dark btn-lg" asp-action="Checkout">Cancel</a>
        </form>
    </div>
</section>
