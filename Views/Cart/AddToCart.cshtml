@{
    ViewData["Title"] = "Add to cart";
    var product = ViewBag.Product as ABCRetail.Models.Product;
}

<section class="section-shell">
    <div class="card border-0 shadow-sm p-4">
        <h2 class="fw-semibold">Add item to cart</h2>
        <p class="text-muted">Confirm the quantity you would like to add.</p>

        @if (product is not null)
        {
            <div class="d-flex gap-3 align-items-center mb-4">
                <img src="@product.ImageUrl" alt="@product.Name" class="rounded" style="width: 120px; height: 120px; object-fit: cover;" />
                <div>
                    <h5 class="mb-1">@product.Name</h5>
                    <p class="text-muted mb-0">@product.Description</p>
                    <span class="fw-semibold">R@product.Price</span>
                </div>
            </div>
            <form asp-action="AddToCart" method="post" class="d-flex gap-3 align-items-center">
                <input type="hidden" name="productId" value="@product.Id" />
                <label class="form-label m-0" for="quantity">Quantity</label>
                <input id="quantity" name="quantity" type="number" value="1" min="1" class="form-control" style="max-width: 90px;" />
                <button class="btn btn-dark" type="submit">Add</button>
                <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
            </form>
        }
        else
        {
            <div class="alert alert-warning">Product not found.</div>
        }
    </div>
</section>
