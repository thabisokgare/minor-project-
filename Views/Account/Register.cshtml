@model ABCRetail.Models.RegisterViewModel

@{
    ViewData["Title"] = "Create account";
}

<section class="auth-shell">
    <div class="card shadow-sm border-0 p-4">
        <h2 class="mb-3 fw-semibold">Create your ABC Retail account</h2>
        <p class="text-muted">Join the community for early drops and tracking.</p>

        <form asp-action="Register" method="post" class="mt-4">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control form-control-lg" autocomplete="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DisplayName" class="form-label"></label>
                <input asp-for="DisplayName" class="form-control form-control-lg" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control form-control-lg" autocomplete="new-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-dark btn-lg w-100">Create account</button>
        </form>

        <p class="mt-3 text-center">
            Already have an account?
            <a asp-controller="Account" asp-action="Login">Sign in</a>
        </p>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
