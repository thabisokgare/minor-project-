@model IEnumerable<ABCRetail.Models.Product>

@{
    ViewData["Title"] = "Products";
    var isAdmin = User.IsInRole("Admin");
}

<section class="section-shell">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <span class="eyebrow">Catalog</span>
            <h2 class="fw-semibold mb-0">Available products</h2>
        </div>
        @if (isAdmin)
        {
            <a class="btn btn-dark" asp-action="Create">Add product</a>
        }
    </div>

    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted flex-grow-1">@product.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-semibold">R@product.Price</span>
                            <div class="d-flex gap-2">
                                <a class="btn btn-outline-dark btn-sm" asp-action="Details" asp-route-id="@product.Id">View</a>
                                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <button class="btn btn-dark btn-sm" type="submit">Add to cart</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
